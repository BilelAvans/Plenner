<Page
    x:Class="Plenner.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Plenner"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid DoubleTapped="Grid_DoubleTapped">
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/Background_orange.png" />
        </Grid.Background>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="15,15,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="25" Width="135" Text="Login Page"/>
        <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="40,105,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top"/>
        <TextBlock x:Name="textBlock2" HorizontalAlignment="Left" Margin="39,165,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top"/>
        <TextBox x:Name="username_textBox" HorizontalAlignment="Left" Margin="130,105,0,0" TextWrapping="Wrap" Text="Ok" VerticalAlignment="Top" Width="180"/>
        <TextBox x:Name="password_textBox" HorizontalAlignment="Left" Margin="130,160,0,0" TextWrapping="Wrap" Text="Ok" VerticalAlignment="Top" Width="180"/>
        <Button x:Name="login_button" Content="Login" HorizontalAlignment="Left" Margin="262,235,0,0" VerticalAlignment="Top" Click="login_button_Click"/>

    </Grid>
</Page>
